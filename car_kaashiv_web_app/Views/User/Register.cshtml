@model car_kaashiv_web_app.Models.DTOs.RegisterUserDto
@{
    ViewData["Title"] = "Register";
 }
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
<div class="text-center">
    <h1 class="display-4">Welcome to Cars Kaashiv </h1>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
    <p>"The Right Fix for Your Automotive Needs."</p>    
</div>

<div class="container mt-5 d-flex justify-content-center">   
    <div class="card p-4 shadow-lg"style="max-width:400px; width:100%">
        <form asp-action="Register" asp-controller="User" method="post">
            <h2 class="text-center mb-4">Register User</h2>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
            <div class="mt-3">
                <a asp-action="Login" asp-contoller="User" class="link-secondary">Already have account then login!</a>
            </div>
            
        </form>

    </div>
   



</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


