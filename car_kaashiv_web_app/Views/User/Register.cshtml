@model car_kaashiv_web_app.Models.DTOs.RegisterUserDto
@{
    ViewData["Title"] = "Register";
 }
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]21</div>
}
<div class="text-center">
    <h1 class="display-4">Welcome to Cars Kaashiv </h1>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@
    <p>"The Right Fix for Your Automotive Needs."</p>    
</div>

<div class="container mt-5 d-flex justify-content-center">   
    <div class="card p-4 shadow-lg"style="max-width:400px; width:100%">
        <form asp-action="Register" asp-controller="User" method="post">
            <h2 class="text-center mb-4">Register User</h2>
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" type="tel" pattern="[6-9]{3,15}" onkeypress="return event.charCode >=48 && event.charCode <=57" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <div class="input-group"> 
                    <input asp-for="Password" type="password" class="form-control" id="Password" />
                    <button type="button" class="btn btn-outline-secondary" id="togglePassword"><i class="bi bi-eye-slash" id="togglePasswordIcon"></i> </button>
                </div>

                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3 position-relative">

                <label asp-for="CPassword" class="form-label">Confirm Password</label>           
                <input asp-for="CPassword" type="password" class="form-control" />
                <span asp-validation-for="CPassword" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
            <div class="mt-3 text-center" >
                <a asp-action="Login" asp-contoller="User" class="link-secondary">Already have an account then login!</a>
            </div>            
        </form>

    </div>
   



</div>
<script>    
        const passwordInput = document.getElementById("Password")
        const toggleBtn = document.getElementById("togglePassword")
        const toggleIcon = document.getElementById("togglePasswordIcon")
        let hideTimeout;
          toggleBtn.addEventListener("click",function() {
            clearTimeout(hideTimeout);
          if (passwordInput.type === "password") {
            //show password
            passwordInput.type = "text";
            toggleIcon.classList.remove("bi-eye-slash");
            toggleIcon.classList.add("bi-eye");
            //Auto -- hide after 3 seconds
            hideTimeout = setTimeout(()=> {
                passwordInput.type="password";
                toggleIcon.classList.remove("bi-eye");
                toggleIcon.classList.add("bi-eye-slash");
            },3000);
        } else {
            //manually hide if user clicks again
            passwordInput.type= "password";
            toggleIcon.classList.remove("bi-eye");
            toggleIcon.classList.add("bi-eye-slash")
            // console.log("Manually hidden");
         }        
      })     
    
</script>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


