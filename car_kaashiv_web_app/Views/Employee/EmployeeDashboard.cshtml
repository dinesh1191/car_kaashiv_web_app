@model car_kaashiv_web_app.Models.Entities.TableEmployee

@{
    ViewData["Title"] = "Employee Dashboard";
}

    <style>
    .card:hover {
        transform: scale(1.02);
        box-shadow: 0 0 10px rgba(0,0,0,0.2);
        transition: 0.3s ease;
    }
 
    .dashboard-img {
        width: 100%;
        height: inherit; /* or any consistent height  */
        object-fit: cover;
       
    }


</style>
<div class="container mt-5 ">
    <h2 class="text-center mb-4">Welcome to Employee Dashboard</h2>

    <div class="row justify-content-center g-4">
        <!-- Employee Management -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/employee-management.png" class="card-img-top dashboard-img" alt="Employee Management">
                <div class="card-body text-center">
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">Manage employee records, roles, and access.</p>
                    <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-primary">Go</a>
                </div>
            </div>
        </div>

        <!-- Add Part -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/add-part.png" class="card-img-top dashboard-img" alt="Add Part">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Part</h5>
                    <p class="card-text">Register new car parts into the system.</p>
                    <a asp-controller="Part" asp-action="PartAdd" class="btn btn-primary">Add</a>
                </div>
            </div>
        </div>

        <!-- View Parts -->
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/view-parts.png" class="card-img-top dashboard-img" alt="View Parts">
                <div class="card-body text-center">
                    <h5 class="card-title">View Parts</h5>
                    <p class="card-text">Browse and manage existing car parts.</p>
                    <a asp-controller="Part" asp-action="PartList" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    </div>
</div>


